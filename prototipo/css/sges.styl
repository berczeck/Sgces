gris_claro = #f5f5f5
gris_oscuro = #444
sky_blue = #82CAFF
azul = #22BCE0

html
body
	font-family 'Lato'
	font-weight 300
	height 100%

footer
	bottom 0
	height 60px
	background-color gris_claro
	color azul
	position fixed
	width 100%
	padding 0 30px

	.texto
		margin 20px 0


form
	padding 0.8em
	display none

	label
		display inline-block
		width 60px

header
	background #428bca
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	padding 0.5em
	position relative
	overflow hidden
	z-index 2

	h1
		font-size 18px
		font-weight normal
		padding 0
		margin 0

	.logo
		border-right 1px solid azul 
		float left
		width 60px
		figure
			border 1px dashed invert(gris_oscuro)
			height 52px
			width 52px

	.usuario
		.avatar
			border 1px dashed invert(gris_oscuro)
			border-radius 50%
			height 50px
			width 50px

nav
	background-color azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 6px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap

		&::-webkit-scrollbar
			display none

		li
			display inline-block

			&:first-child
				margin 0 0 0 .5em

			a
				color white
				display block
				/*margin 0 0.5em*/
				padding 0 0.7em
				transition 0.2s background linear
				text-decoration none
				&:hover
					background rgba(black, 0.1)


section
	margin-right 0px
	margin-left 0px
	height auto
	margin 0 auto -60px
	padding 0 0 60px

.col-lg-3
	padding-left 3px !important
	margin-top -18px

.container
	margin-left 0 !important
	margin-top 50px !important